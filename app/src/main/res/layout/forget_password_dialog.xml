<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_dialog"
        android:background="@color/purple_700"
        app:titleTextColor="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_700">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/back_arrow"
                android:id="@+id/imgBackButton"
                android:background="@color/purple_700"/>
            
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/forgot_password"
                android:textColor="@color/white"
                android:background="@color/purple_700"
                android:gravity="center"
                android:textSize="17sp"
                android:layout_toEndOf="@+id/imgBackButton"
                android:layout_marginStart="15dp"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/enter_registered_mobile_no"
                android:textColor="@color/black"
                android:layout_marginTop="16sp"
                android:textStyle="bold"
                tools:ignore="TextViewEdits" />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:textColor="@color/black"
    android:outlineSpotShadowColor="@color/black"
    android:id="@+id/edtForgetMobile"
    android:maxLength="11"
    android:inputType="number"
    tools:ignore="TextViewEdits,UnusedAttribute" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="17sp"
    android:id="@+id/txtYourPassword"
    android:visibility="gone"
    android:textColor="@color/black"
    android:layout_marginTop="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/submit"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textAllCaps="false"
                android:background="@color/purple_500"
                android:textColor="@color/white"
                android:id="@+id/btnForgetSubmit"/>

        </LinearLayout>



</LinearLayout>